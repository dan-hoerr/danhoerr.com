<div class="wrapper">
<h1>Listing portfolios</h1>
<%= link_to 'New Portfolio', new_portfolio_path %>
<table>
  <tr>
    <th>Project name</th>
    <th>Tasks</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @portfolios.each do |portfolio| %>
  <tr>
    <td><%= portfolio.project_name %></td>
    <td><%= portfolio.tasks %></td>
    <td><%= image_tag portfolio.image_url(:thumb) if portfolio.image? %></td>
    <td><%= link_to 'Show', portfolio %></td>
    <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
    <td><%= link_to 'Destroy', portfolio, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Portfolio', new_portfolio_path %>
</div>
